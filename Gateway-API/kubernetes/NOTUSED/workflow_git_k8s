name: Apply generated configuration to local Kong gateway and update API documentation

on:
  push:
    branches:
      - master

jobs:
  deploy_to_kong-k8s:
    runs-on: self-hosted
    name: Apply generated configuration to local K4K8S
    steps:
      - name: Checkout
        uses: actions/checkout@v2
      - name: Generate OAS spec from insomnia
        run: inso export spec spc_214285 -o ./openapi/stock.yaml
      - name: Generate Kong declarative configuration from Spec
        run: inso generate config ./openapi/stock.yaml --type kubernetes > kong.yaml
      - name: Deploy declarative config
        run: kubectl apply -f kong.yaml


